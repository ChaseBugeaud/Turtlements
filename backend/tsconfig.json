{
      "compilerOptions": {
            "lib": [
                  "es5",
                  "es6",
                  "esnext"
            ],
            "target": "esnext",
            "module": "esnext",
            "moduleResolution": "node",
            "esModuleInterop": true,
            "outDir": "./build",
            "rootDir": "./src",
            "emitDecoratorMetadata": true,
            "noEmit": true,
            "experimentalDecorators": true,
            "allowImportingTsExtensions": true,
            "sourceMap": true
      }
}
